<div id="left">
  <div id="entry-preview">
    <% $head.each do |head| %>
      <a href="<%= head.URL %>" target="_blank"><%= head.title %></a><span>のブックマーク</span>
    <% end %>
  </div>
  
  <% $to_beat.each do |bm| %>
  <div class="bkm-box">
    <div class="bkm-icon"><img src="<%= bm.icon %>" width="32px" height="32px"></div>
    <div class="bkm-user"><%= bm.user %></div>
    <div class="bkm-comment"><%= bm.comment %></div>
      <% if bm.spower != 0 %>
        <div class="bkm-star">★<span class="figure"><%= bm.spower %></span></div>
      <% else %>
        <div class="bkm-star"><span class="figure"></span></div>
      <% end %>
  </div>
  <% end %>
</div>
<div id="right">
  <div class="switch">
    <input id="switch" checked type="checkbox">
    <label for="switch"></label>
  </div>
  <div id="btn_vol">通常モード／無双モード *音が出ます</div>
  <div id="btn_expl">一掃する</div> 
</div>






